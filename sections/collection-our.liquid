{% if template != 'index' and 'collection' and 'product' %}
{%- include 'custom-snippet' -%}
{% endif %}

{%- if section.settings.title != blank or section.blocks.size > 0 -%}
{{ 'collection-our.css' | asset_url | stylesheet_tag }}

<div class="collection-our">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
    <div class="collection-our-heading">
      <h2 class="collection-our__title collection-our__title-{{ section.id }}">
        {{ section.settings.title | escape }}
      </h2>
      {%- render 'style', sufix: '.collection-our__title', id: section.id, style: section.settings -%}
    </div>
    {%- endif -%}
    <ul class="collection-our-list bc-scroll-hide">
      {%- for block in section.blocks -%}
      <li class="collection-our-list__item">
        {%- if block.settings.button_link != blank -%}
          <a href="{{ block.settings.button_link }}">
            {%- endif -%}
            {%- if block.settings.image != blank -%}
            <div class="collection-our_image__wrap">
                {%- render 'resimg', image: block.settings.image -%}
            </div>
            {%- if block.settings.title != blank -%}
            <h2 class="collection-our__name collection-our__name-{{ block.id }}">
            {{ block.settings.title }}
            </h2>
            {%- render 'style', sufix: '.collection-our__name', id: block.id, style: block.settings -%}
            {%- endif -%}
            {%- if block.settings.text != blank -%}
            {%- assign collection_text = block.settings.text | escape | downcase -%}
            <div class="collection-our__text" style="{% if collection_text contains 'href' %} text-decoration: underline {% endif %}; text-align: center">{{ block.settings.text }}</div>
            {%- endif -%}
            {%- endif -%}
            {%- if block.settings.button_link != blank -%}
          </a>
        {%- endif -%}
      </li>
      {%- endfor -%}
    </ul>
  </div>
</div>
{%- endif -%}

