<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'section-rich-text.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}</noscript>

<div class="rich-text{% if section.settings.full_width %} rich-text--full-width{% endif %} color-{{ section.settings.color_scheme }}">
  <div class="rich-text__blocks">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'heading' -%}
          <h2 class="h1 heading-{{ block.id }}">{{ block.settings.heading }}</h2>
          {%- render 'style', sufix: '.heading', id: block.id, style: block.settings -%}
        {%- when 'text' -%}
          <div class="rich-text__text rte rich-text__text-{{ block.id }}">{{ block.settings.text }}</div>
          {%- render 'style', sufix: '.rich-text__text', id: block.id, style: block.settings -%}
        {%- when 'button' -%}
          <a {% if block.settings.button_link == blank %}aria-disabled="true"{% else %}href="{{ block.settings.button_link }}"{% endif %} class="button-black-outline button-black-outline-{{ block.id }}">
            {{ block.settings.button_label }}
          </a>
          {%- render 'style', sufix: '.button-black-outline', id: block.id, style: block.settings -%}
      {%- endcase -%}
    {%- endfor -%}
  </div>
</div>

